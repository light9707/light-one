<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gb12"
    >
    <ImageButton
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus2"
        android:adjustViewBounds="true"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="#00000000"
        />
    <EditText
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#ffad33"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:background="@drawable/bg_username1"
        android:layout_marginTop="5dp"
        android:drawablePadding="140dp"
        android:drawableRight="@drawable/s1"
        android:drawableLeft="@drawable/yy1"
        android:layout_toRightOf="@id/btn_2"
        />
    <ImageButton
        android:id="@+id/image3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/lview1"
        android:scaleType="fitStart"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:layout_toRightOf="@id/btn_1"
        android:background="#00000000"
        />
    <TextView
        android:id="@+id/img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="50dp"
        android:paddingBottom="20dp"
        android:paddingRight="50dp"
        android:layout_below="@+id/btn_2"
        android:drawableTop="@drawable/tw2"
        android:text="厨房好物"
        android:textSize="14dp"/>
    <TextView
    android:id="@+id/img_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="40dp"
    android:layout_below="@id/btn_2"
    android:layout_toRightOf="@id/img_1"
    android:drawableTop="@drawable/ft1"
    android:text="发现新菜"
    android:textSize="14dp"/>
    <TextView
    android:id="@+id/img_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:layout_below="@id/btn_2"
    android:layout_toRightOf="@id/img_2"
    android:drawableTop="@drawable/mb1"
    android:text="菜谱分类"
    android:textSize="14dp"/>
    <ImageButton
        android:id="@+id/img_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/one250"
        android:layout_below="@id/img_3"
        android:padding="5dp"/>


</RelativeLayout>
